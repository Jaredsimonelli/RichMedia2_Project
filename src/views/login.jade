extends ./base.jade
block append style
  link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  nav
    .navlink
      a(href="/login") Login
    .navlink
      a(href="/signup") Sign up
  section#loginTitle
    h1.loginT Welcome to Geo Wars
    h2.loginT Please Sign In
  section#login
    form#loginForm(class="mainForm", name="loginForm", action="/login", method="POST")
      label(for="username") Username: 
      input#user(type="text", name="username", placeholder="username")
      label(for="pass") Password: 
      input#pass(type="password", name="pass", placeholder="password")
      input(type="hidden", name="_csrf", value="#{csrfToken}")
      a#loginSubmit(class="formSubmit", href="#") Sign in
  #characterMessage
    img#speech(src="/assets/img/speech.png", alt="speech box")
    h3
      span#errorMessage Wrong username or password
block scripts
  script(src="/assets/client.js")